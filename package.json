{
  "name": "@eevi/monorepo",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@7.5.2",
  "description": "",
  "author": "starknt",
  "license": "MIT",
  "homepage": "https://github.com/starknt/eevi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starknt/eevi.git"
  },
  "bugs": "https://github.com/starknt/eevi/issues",
  "keywords": [
    "vite",
    "plugin",
    "esbuild",
    "electron",
    "build",
    "fast"
  ],
  "sideEffects": false,
  "scripts": {
    "play": "pnpm -C playground dev",
    "build": "rimraf packages/*/dist && pnpm -r build",
    "stub": "pnpm -r --parallel run stub",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "publish": "pnpm build && pnpm -r publish -F \"./packages/**\" --access public",
    "typecheck": "npx tsc --noEmit",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@types/node": "^18.0.6",
    "bumpp": "^8.2.1",
    "eslint": "^8.20.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.0.3",
    "pnpm": "^7.5.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "tsup": "^6.2.1",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "vite": "^3.0.1",
    "vitest": "^0.18.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
