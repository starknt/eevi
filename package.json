{
  "name": "@eevi/monorepo",
  "version": "0.4.0",
  "private": true,
  "packageManager": "pnpm@7.5.2",
  "description": "",
  "author": "starknt",
  "license": "MIT",
  "homepage": "https://github.com/starknt/eevi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starknt/eevi.git"
  },
  "bugs": "https://github.com/starknt/eevi/issues",
  "keywords": [
    "vite",
    "plugin",
    "esbuild",
    "electron",
    "build",
    "fast"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build:play": "rimraf playground/dist && pnpm -C playground build",
    "build": "pnpm clean && pnpm -r -F \"./packages/**\" build",
    "stub": "pnpm -r --parallel run stub",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "publish": "pnpm build && pnpm -r publish -F \"./packages/**\" --access public",
    "typecheck": "npx tsc --noEmit",
    "test": "vitest --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf playground/dist packages/*/dist"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.31.0",
    "@types/node": "^18.11.9",
    "bumpp": "^8.2.1",
    "eevi": "workspace:*",
    "eslint": "^8.28.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.0.4",
    "pnpm": "^7.17.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.3",
    "unbuild": "^1.0.1",
    "vite": "^3.2.4",
    "vitest": "^0.25.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js, ts, vue, yml, yaml, html}": [
      "eslint --fix",
      "git add"
    ]
  }
}
