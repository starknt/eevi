{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": [
      "esnext",
      "DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "@eevi/core": [
        "./packages/core/src/index.ts"
      ],
      "@eevi/config": [
        "./packages/config/src/index.ts"
      ],
      "eevi": [
        "./packages/eevi/src/index.ts"
      ],
      "eevi/vite": [
        "./packages/eevi/src/vite/index.ts"
      ],
      "eevi/esbuild": [
        "./packages/eevi/src/esbuild.ts"
      ]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "playground/app"
  ]
}
